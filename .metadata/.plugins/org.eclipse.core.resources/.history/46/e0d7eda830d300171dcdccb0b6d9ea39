package in.vamsoft.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

public class UserImpl {
  Connection connection = null;
  ResultSet resultSet = null;
  public UserImpl() {
    connection = DBConnectionUtil.getConnection();
  }

  public boolean userValidate(String uname,String pass) {

    try(PreparedStatement preparedStatement = connection.prepareStatement("select emailid,password from test_user")){
      
      resultSet = preparedStatement.executeQuery();
      while(resultSet.next()) {
        if(resultSet.getString(1).equals(uname)&&resultSet.getString(2).equals(pass)) {
          return true;
        }
      }
      return false;
      
    } catch (SQLException e) {
      e.printStackTrace();
    }
    
    
  }
  
}
