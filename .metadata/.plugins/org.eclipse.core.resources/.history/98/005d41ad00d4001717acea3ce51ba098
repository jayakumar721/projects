package in.vamsoft.dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import in.vamsoft.model.Question;

public class QuestionsDAO {
  Connection con = null;
  public QuestionsDAO(){
    con = DBConnectionUtil.getConnection();
  }
  public List<Question> getQuestions(int start, int total) {
    List<Question> list = new ArrayList<>();
    System.out.println(start+""+total);
    try(PreparedStatement ps = con.prepareStatement("select * from questions where rownum between ? and ?")) {
      ps.setInt(1, start-1);
      ps.setInt(1, (start+total));
      ResultSet rs = ps.executeQuery();
      int quesno = 1;
      while (rs.next()) {
        System.out.println(rs.getString(1));
        Question e = new Question();
        e.setqNo(quesno);
        e.setQuestion(rs.getString(1));
        e.setOp1(rs.getString(2));
        e.setOp2(rs.getString(3));
        e.setOp3(rs.getString(4));
        e.setOp4(rs.getString(5));
        list.add(e);
        quesno++;
      }
      return list;

    } catch (SQLException e) {
      e.printStackTrace();
    }
    return null;
  }
}
